{
  "name": "electron-tesserae",
  "version": "0.1.0",
  "description": "",
  "main": "renderer.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "package": "shx rm -rf dist && npm run -s package-python && npm run -s package-electron && npm run -s package-cleanup",
    "package-python": "pyinstaller --clean --windowed --onefile --distpath dist-python --additional-hooks-dir pyinstaller-hooks tisapi/run_app.py",
    "package-electron": "electron-builder",
    "package-cleanup": "shx rm -rf build && shx rm -rf run_app.spec && shx rm -rf dist-python"
  },
  "build": {
    "appId": "edu.buffalo.tesserae",
    "productName": "Tesserae",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": "zip"
    },
    "files": [
      "renderer.js",
      "startup.html",
      "preloadStartup.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist-python/",
        "to": "app/dist-python",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "frontend/",
        "to": "app/frontend",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "eslintConfig": {
    "env": {
      "es2017": true,
      "node": true
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "gunzip-maybe": "^1.4.2",
    "ini": "^1.3.5",
    "mkdirp": "^1.0.4",
    "mongodb": "^3.5.7",
    "ps-tree": "^1.2.0",
    "tar-fs": "^2.1.0",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "electron": "^9.1.2",
    "electron-builder": "^22.8.0",
    "eslint": "^7.5.0",
    "shx": "^0.3.2"
  }
}
